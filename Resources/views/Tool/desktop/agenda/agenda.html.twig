{% extends 'ClarolineCoreBundle:Desktop:layout.html.twig' %}

{% set calendarPath = 'bundles/frontend/jquery/plugin/fullcalendar-2.3.1/' %}

{% block title %}{{ parent() ~ ' - ' ~ "agenda" | trans({}, "platform") | striptags | raw }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel='stylesheet' type='text/css' href='{{ asset(calendarPath ~ 'fullcalendar.css') }}'/>
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/jquery/jquery-ui-1.9.2.custom/css/ui-lightness/jquery-ui-1.9.2.custom.css') }}'/>
    <link rel='stylesheet' type='text/css' href='{{ asset(calendarPath ~ 'fullcalendar.print.css') }}' media='print' />
    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/jquery/plugin/datepicker/css/datepicker.css') }}'>
    <style>
        .fc-event {
            min-height: 15px;
        }
        .fc-day-grid-event > .fc-content {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 90%;
        }
        .is-task {
            padding-right: 3px;
        }
    </style>
{% endblock %}
{% block breadcrumb %}
    {{
        macros.desktopBreadcrumbs([
            {
                'name': 'agenda'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}
{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'agenda'|trans({}, 'platform') }}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div id="events"></div>
            <div id='calendar' class="col-md-9"></div>

            <div class="col-md-3">
                <div class="panel text-center">
                    <a href="{{ path('claro_desktop_agenda_export') }}" class="btn btn-default btn-xs" role="button">
                        {{ 'export'|trans({}, 'agenda') }}
                    </a>
                    <a id="import-ics-btn" href="{{ path('claro_agenda_import_form') }}"
                       class="btn btn-default btn-xs"
                       role="button">
                        {{ 'import_agenda_file_file'|trans({}, 'agenda') }}
                    </a>
                </div>

                <div class="panel panel-default">
                    {% if filters | length > 1 %}
                        <div data-toggle="collapse" data-target="#panel-owners" class="panel-heading">{{'filter_ws'|trans({}, 'agenda')}}</div>
                        <div id="panel-owners" class="panel-body list-group in" style="padding:0">
                            <div id="selectWorkspace">
                                {% for wsId, filterName in filters %}
                                    <li class="list-group-item">
                                        <input
                                            id="ws-{{ wsId }}"
                                            type="checkbox"
                                            name="{{ filterName}}"
                                            class="filter"
                                            value="{{ wsId }}"
                                        />
                                        <label for="ws-{{ wsId }}">{{ filterName }}</label>
                                    </li>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                    <div data-toggle="collapse" data-target="#panel-tasks" class="panel-heading">{{'filter_tasks'|trans({}, 'agenda')}}</div>
                    <div id="panel-tasks" class="panel-body list-group in" style="padding:0">
                        <div id="selectTask">
                            <li class="list-group-item">
                                <input
                                        id="no-filter-tasks"
                                        type="radio"
                                        name="tasks"
                                        class="filter-tasks"
                                        value="no-filter-tasks"
                                        checked
                                        />
                                <label for="no-filter-tasks">{{ 'no-filter-tasks'|trans({}, 'agenda') }}</label>
                            </li>
                            <li class="list-group-item">
                                <input
                                        id="hide-tasks"
                                        type="radio"
                                        name="tasks"
                                        class="filter-tasks"
                                        value="hide-tasks"
                                        />
                                <label for="hide-tasks">{{ 'hide_tasks'|trans({}, 'agenda') }}</label>
                            </li>
                            <li class="list-group-item">
                                <input
                                        id="hide-events"
                                        type="radio"
                                        name="tasks"
                                        class="filter-tasks"
                                        value="hide-events"
                                        />
                                <label for="hide-events">{{ 'show_task_only'|trans({}, 'agenda') }}</label>
                            </li>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">{{ 'agenda_form_priority'|trans({}, 'agenda') }}</div>
                    <div class="panel-body list-group" style="padding:0">
                        <div class="list-group-item" style="color:#FF0000">  {{ 'high'|trans({}, 'agenda') }} </div>
                        <div class="list-group-item" style="color:#01A9DB"> {{ 'medium'|trans({}, 'agenda') }} </div>
                        <div class="list-group-item" style="color:#848484"> {{ 'low'|trans({}, 'agenda') }} </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts debug=false filter='twig_js, jsmin' vars=["locale"]
        "@ClarolineAgendaBundle/Resources/views/Agenda/eventContent.html.twig"
        "@ClarolineAgendaBundle/Resources/views/Agenda/task.html.twig" %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript" src="{{ url('bazinga_jstranslation_js', { 'domain': 'agenda' }) }}"></script>
    <script type="text/javascript" src="{{ asset(calendarPath ~ 'lib/moment.min.js') }}"></script>
    <script type='text/javascript' src='{{ asset(calendarPath ~ 'fullcalendar.js') }}' ></script>
    <script type='text/javascript' src='{{ asset('bundles/clarolineagenda/js/calendar.js') }}'></script>
    <script type='text/javascript' src='{{ asset('bundles/frontend/date.js') }}'></script>
    <script type='text/javascript'>
        $(function () {
            Claroline.Calendar.initialize('desktop');
        });
    </script>
    <script type="text/javascript" src="{{ asset('bundles/frontend/jquery/plugin/datepicker/js/bootstrap-datepicker.js') }}"></script> <script type="text/javascript" src="{{ asset('bundles/clarolineagenda/js/calendarDatePicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/frontend/jquery/jquery-ui-1.9.2/components/jquery.ui.draggable.min.js') }}"> </script>
    <script type="text/javascript" src="{{ asset('bundles/frontend/jquery/jquery-ui-1.9.2/components/jquery.ui.resizable.min.js') }}"> </script>
{% endblock javascripts %}
